{% extends 'base.html.twig' %}

{% block titulo %}Gesti√≥n de personas | {{ titulo }}{% endblock %}

{% block contenido %}
<div class="card col-md-6">
<h1> {{titulo}}</h1>
<h5 class="mb-4"> {{mensaje}}</h5>
    <div class="row">
        <div class="col-md mt-2">
            <form method="POST" action="modificador">
                <div class="form-group col-md-9">
                    <label for="inputDni">DNI</label>
                    <input type="text" class="form-control" id="inputDni" placeholder="DNI" name="inputDni">
                    <label for="inputNombre">Nombre</label>
                    <input type="text" class="form-control" id="inputNombre" placeholder="Nombre" name="inputNombre">
                </div>
            <button type="submit" class="btn btn-primary">Cambiar el nombre</button>
            </form>
        </div>
        <div class="col-md mt-2">
            <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">DNIs disponibles</th>
                    <th>Nombre</th>
                </tr>
            </thead>
            <tbody>
                {% for p in persona %}
                <tr>
                    <th scope="row">{{ p.dni }}</td>
                    <td> {{p.nombre}}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    </div>
</div>



{% endblock %}
{% block pie %}
{{ parent() }}
{% endblock %}